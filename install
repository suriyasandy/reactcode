# Tailwind CSS setup
npm install -D tailwindcss postcss autoprefixer
npx tailwindcss init -p

# Radix UI primitives (used by shadcn)
npm install @radix-ui/react-dialog @radix-ui/react-popover @radix-ui/react-tooltip

# Lucide icons (if used in buttons/cards)
npm install lucide-react

# Class merging utility (used by shadcn)
npm install class-variance-authority clsx tailwind-variants
